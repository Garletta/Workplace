<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="LoginForm" type="Forms.LoginForm"></form-bean>
        <form-bean name="RegisterForm" type="Forms.RegisterForm"></form-bean>
    </form-beans>
    <action-mappings>
        <action path="/login"
                name="LoginForm"
                type="Actions.LoginAction"
                attribute="LoginForm"
                input="/WEB-INF/jsps/login.jsp">
            <forward name="Success" path="/WEB-INF/jsps/loginSuccess.jsp"></forward>
        </action>
        <action path="/register"
                name="RegisterForm"
                type="Actions.RegisterAction"
                attribute="RegisterForm"
                input="/WEB-INF/jsps/register.jsp">
            <forward name="Success" path="/WEB-INF/jsps/registerSuccess.jsp"></forward>
        </action>
    </action-mappings>
    <message-resources parameter="ApplicationResources"></message-resources>
</struts-config>